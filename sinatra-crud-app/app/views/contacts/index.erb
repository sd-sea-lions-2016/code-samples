<div class="container">
  <h1>All Contacts</h1>

  <!-- Implement displaying all contacts -->
  <%#= h @contacts.inspect # Uncomment beginning of line to see contacts %>

  <%= erb :'contacts/search_form' %>
  <!--  <a href='/search'>Search contacts</a> -->

  <table>
    <tr>
      <th>id</th>
      <th>First name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th>Phone Number</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
    <% @contacts.each do |contact| %>
      <tr>
        <td><a href="/contacts/<%= contact.id %>"><%= contact.id %></a></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><a href="/contacts/<%= contact.id %>/edit">Edit</a></td>
        <td><a href="/contacts/<%= contact.id %>/delete">Delete</a></td>
      </tr>
    <% end %>
  </table>

</div>
